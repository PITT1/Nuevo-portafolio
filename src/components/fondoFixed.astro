<section>
    <div class="container1">
        <span></span>
    </div>

</section>

<style>
    section {
        position: relative;
        position: fixed;
        height: 100vh;
        width: 100vw;
        background-color: black;
        z-index: -10;
    }

    .container1 {
        position: absolute;
        top: 20%;
        left: 0;
        height: 60px;
        width: 500px;
        display: flex;
        justify-content: end;
        align-items: center;
        animation: rotate1;
        animation-duration: 10s;
        animation-timing-function: linear;
        animation-iteration-count: infinite;
    }

    .container1 span {
        height: 0px;
        width: 0px;
        background-color: rgb(76, 21, 129);
        -webkit-box-shadow:0px 0px 150px 97px rgb(76, 21, 129);
        -moz-box-shadow: 0px 0px 150px 97px rgb(76, 21, 129);
        box-shadow: 0px 0px 150px 97px rgb(76, 21, 129);
    }

    @keyframes rotate1 {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>